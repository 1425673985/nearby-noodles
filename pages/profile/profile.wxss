/* pages/profile/profile.wxss */
.container {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.profile-content {
  flex: 1;
  padding: 40rpx;
}

.info-section {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
}

.info-text {
  font-size: 32rpx;
  color: #333;
}

.version-container {
  width: 100%;
  padding: 40rpx 0;
  text-align: center;
  background-color: #f5f5f5;
}

.version-text {
  font-size: 24rpx;
  color: #999999;
}

