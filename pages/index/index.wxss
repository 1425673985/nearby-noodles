/**index.wxss**/
.container {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  padding: 20rpx;
  padding-bottom: 0;
  box-sizing: border-box;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 32rpx;
  color: #666;
}

.auth-tip {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
  padding: 40rpx;
}

.auth-tip text {
  margin-bottom: 40rpx;
  font-size: 32rpx;
  color: #666;
  text-align: center;
}

.restaurant-card {
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
}

.restaurant-map-wrapper {
  width: 100%;
  height: 400rpx; /* 降低高度，弱化地图视觉权重 */
  position: relative;
  background-color: #f5f5f5;
  flex-shrink: 0;
  opacity: 0.85; /* 降低不透明度，作为背景层 */
}

.restaurant-map {
  width: 100%;
  height: 100%;
  filter: grayscale(20%); /* 轻微灰度，弱化视觉 */
}

.map-control-buttons {
  position: absolute;
  bottom: 15rpx;
  right: 15rpx; /* 只显示在右侧 */
  display: flex;
  flex-direction: row;
  z-index: 999;
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.map-control-btn {
  width: 72rpx;
  height: 72rpx;
  border-radius: 36rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.location-pin-icon {
  position: relative;
  width: 32rpx;
  height: 40rpx;
}

.location-pin-icon::before {
  content: '';
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 14rpx solid;
}

.location-pin-icon::after {
  content: '';
  position: absolute;
  top: 10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 16rpx;
  height: 16rpx;
  border-radius: 50% 50% 50% 0;
  transform: translateX(-50%) rotate(-45deg);
  border: 2rpx solid;
  box-sizing: border-box;
}

.icon-red::before {
  border-top-color: #ff6b35;
}

.icon-red::after {
  background-color: #ff6b35;
  border-color: #ff6b35;
}

.icon-blue::before {
  border-top-color: #007AFF;
}

.icon-blue::after {
  background-color: #007AFF;
  border-color: #007AFF;
}

.restaurant-info {
  padding: 30rpx;
  flex: 1;
  overflow-y: auto;
}

.restaurant-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.restaurant-address {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.restaurant-tags {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 20rpx;
  margin-top: 16rpx;
}

.tag-badge {
  display: inline-flex;
  align-items: center;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
}

/* 原有状态卡样式（蓝色系） */
.tag-primary {
  background-color: #f0f9ff;
  border: 1rpx solid #bae6fd;
}

.tag-primary .tag-text {
  color: #0369a1;
}

/* 随机推荐状态卡样式（橙色系，明显区分） */
.tag-random {
  background-color: #fff7ed;
  border: 1rpx solid #fed7aa;
}

.tag-random .tag-text {
  color: #ea580c;
  font-size: 22rpx; /* 略小于原标签 */
}

.tag-text {
  font-size: 24rpx;
  font-weight: 500;
}

.restaurant-distance {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}


.action-buttons {
  display: flex;
  flex-direction: row;
  padding-top: 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 30rpx;
  border-top: 1rpx solid #eeeeee;
  background-color: #ffffff;
  width: 100%;
  box-sizing: border-box;
}

.action-buttons .action-btn:first-child {
  margin-right: 20rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: none;
  text-align: center;
  padding: 0;
  margin: 0;
}

.action-btn[disabled] {
  opacity: 0.5;
}

.change-btn {
  background-color: #fff;
  color: #ff6b35;
  border: 2rpx solid #ff6b35;
}

.nav-btn {
  background-color: #ff6b35;
  color: #fff;
}

.error-tip {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
  padding: 40rpx;
}

.error-tip text {
  margin-bottom: 40rpx;
  font-size: 32rpx;
  color: #ff6b35;
  text-align: center;
}
